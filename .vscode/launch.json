{"version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workSpaceRoot}/src",
            "sourceMaps": true,
            "trace": true,
             "sourceMapPathOverrides": {      
        "webpack:///./*":"${workspaceRoot}\\*"
      }
        },

        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 4200,
            "webRoot": "${workSpaceRoot}/src",
            "sourceMaps": true,
            "trace": true,
             "sourceMapPathOverrides": {      
        "webpack:///./*":"${workspaceRoot}\\*"
      }
        }
    ]

}